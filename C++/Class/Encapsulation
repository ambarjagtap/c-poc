/* Encapsulation is defined as binding up of data and functions together, so that non related 
   functions cannot access data.
   
   * It leads to data hiding or abstraction
*/

#include<bits/stdc++.h>
using namespace std;   

class Encapsulation{
    
    private:
        //data hidden from other functions
        int x;
        
    public:
    
        void set(int a){
            x=a;
        }
        
        int get(){
            return x;
        }
        
}; 


int main(){
    
    Encapsulation obj;
    
    obj.set(7);
    
    cout<<obj.get();
    
    
    return 0;
}
